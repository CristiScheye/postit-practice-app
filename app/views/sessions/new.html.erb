<%= render 'shared/content_title', title: 'Log In' %>

<%= form_tag '/login' do %>
	<div class="control-group">
  	<%= label_tag :username %>
  	<%= text_field_tag :username %>
  </div>
	<br/>
  <div class="control-group" >
  	<%= label_tag :password %>
  	<%= password_field_tag :password %>
  </div>
  <br/>
  <div class="control-group">
    <%= submit_tag 'Log In', class: 'btn btn-primary' %>
  </div>
<% end %>