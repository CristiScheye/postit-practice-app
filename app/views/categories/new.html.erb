<%= render 'shared/content_title', title: 'New Category' %>

<% if @category.errors.any? %>
	<%= render 'shared/errors', errors: @category.errors.full_messages %>
<% end %>

<br/>
<%= form_for @category do |f| %>
	<%= f.label :category_name %>
	<%= f.text_field :name %>
	<br/>
	<%= f.submit "Submit New Category", class: "btn btn-inverse" %>
<% end %>

