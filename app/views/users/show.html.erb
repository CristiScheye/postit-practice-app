<%= render 'shared/content_title', title: 'User Profile' %>

<div class="well" >
	<p>Username: <%= @user.username %></p>
</div>

<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active">
      <a href="#post_tab" data-toggle="tab">Posts (<%= @user.posts.count %>)</a>
    </li>
    <li>
      <a href="#comment_tab" data-toggle="tab">Comments (<%= @user.comments.count %>)</a>
    </li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="post_tab">
      <%= render @user.posts %>
    </div>
    <div class="tab-pane" id="comment_tab">
      <%= render @user.comments, show_post: true %>
    </div>
  </div>
</div>
