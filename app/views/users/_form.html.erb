<div class="well">
	<%= form_for @user do |f| %>
		<%= render 'shared/errors', obj: @user %>
		<div class="control-group">
			<%= f.label :username %>
			<%= f.text_field :username %>
		</div>

		<div class="control-group" >
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>

		<div class="control-group">
			<%= f.label :timezone %>
			<%= f.time_zone_select :timezone %>
		</div>

		<div class="control-group">
			<%= f.submit @user.new_record? ? "Register" : "Update" , class: "btn btn-success" %>
		</div>
	<% end %>
</div>