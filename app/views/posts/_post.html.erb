<div class="row">
  <div class="span0 well text-center" >
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), method: 'post', remote: true do %>
        <i class="icon-chevron-up"></i>
      <% end %>
    <% end %>
    <span id="post_<%= post.id %>_votes"><p class="vote_display"><%= pluralize(vote_count(post), 'vote') %></p></span>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false), method: 'post' , remote: true do %>
        <i class="icon-chevron-down"></i>
      <% end %>
    <% end %>
  </div>
	<div class="span8 well">
    <%= render post.categories %>      
		<h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class="quiet">posted by </span><%= link_to post.user.username, user_path(post.user) %>
      <small><%= time_zone(post.created_at) %></small>
    </p>
    <p><%= link_to "#{post.comments.size} comments", post_path(post) %> </p>
	</div>
</div>
